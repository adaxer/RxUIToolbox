<r:ReactiveWindow x:Class="RxUIToolbox.Views.ShellView"
        x:TypeArguments="vm:ShellViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:r="http://reactiveui.net"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RxUIToolbox.ViewModels"
        mc:Ignorable="d" x:Name="root" Title="{Binding Title}"
        Height="450" Width="800">

    <r:ViewModelViewHost x:Name="mainHost" ViewModel="{Binding Main}"/>
</r:ReactiveWindow>